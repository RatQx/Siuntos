@model IEnumerable<AutoNuoma.Models.Siunta>

@{
    ViewBag.Title = "Siuntos";
}

<h2>Siuntos</h2>

<table class="table table-striped datatable">
    <thead>

        <tr style="background-color: lightblue">
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.siuntos_busena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.siuntejo_adresas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gavejo_adresas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gavejo_numeris)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.uzsakymo_kodas)
            </th>

            <th style="width: 18%"></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.siuntos_busena)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.siuntejo_adresas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gavejo_adresas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gavejo_numeris)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.uzsakymo_kodas)
                </td>

                <td>
                    @Html.ActionLink("Paimti", "Paimti", new { kodas = item.uzsakymo_kodas }, new { @class = "btn btn-primary action" })
                    @Html.ActionLink("Sandelyje", "Sandelyje", new { kodas = item.uzsakymo_kodas }, new { @class = "btn btn-primary action" })
                    @Html.ActionLink("Pristatyti", "Pristatyti", new { kodas = item.uzsakymo_kodas }, new { @class = "btn btn-primary action" })
                </td>
            </tr>
        }

    </tbody>

</table>